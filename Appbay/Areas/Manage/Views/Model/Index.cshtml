@model HomeViewModel
@{
    int count = 0;
}
<div>
    <div class="container">
        <div style="display:flex">
            <h1>Model</h1>
            <div>
                <a type="submit" asp-action="create" asp-controller="model" class="btn btn-primary">Create Model</a>
            </div>
        </div>
    </div>
    <div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
 @foreach (Model item in Model.Models)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <div style="width:200px">
                                <img style="width:100%" src="~/uploads/models/@item.ImageUrl">
                            </div>
                        </td>
                        <td><a type="submit" asp-action="update" asp-controller="model" class="btn btn-primary" asp-route-id="@item.Id">Update</a></td>
                        <td><a type="submit" asp-action="delete" asp-controller="model" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
  </tbody>
</table>
    </div>
</div>